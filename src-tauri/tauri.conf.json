{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ql-project",
  "version": "0.1.0",
  "identifier": "com.sinakop.videooptimizer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Video Optimizer",
        "width": 1000,
        "height": 800,
        "minWidth": 900,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' asset: https://asset.localhost blob: data:; media-src 'self' asset: https://asset.localhost blob: data: http://localhost:18493; connect-src 'self' ipc: https://ipc.localhost asset: https://asset.localhost http://localhost:18493;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "externalBin": [
      "ffmpeg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}