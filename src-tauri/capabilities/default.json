{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "ffmpeg",
          "cmd": "ffmpeg",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-open",
      "allow": [
        {
          "href": "^.*$"
        }
      ]
    },
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}